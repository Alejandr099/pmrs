<!DOCTYPE html>
<html>
  <head>
    <title>PROPERTY MANAGEMENT SYSTEM</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">-->

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name %> <%= "show-sidebar" if @show_sidebar.present? %>">
    <%# if ["public", "devise", "sessions"].include?(controller.controller_name) %>
    <% if @show_sidebar.nil? %>
      <header>
        <%= render "layouts/nav/public" %>
      </header>

      <%= yield %>
    <% else %>
      <%= render "layouts/nav/dashboard" %>

        <div class="container-fluid">
          <div class="row">
            <%= render "layouts/nav/sidebar" %>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 mt-3">
              <%= yield %>
            </main>
          </div>
        </div>
  <% end %>

    <%#= render "layouts/footer"%>

    <div id="notiifications" ><%= flash_notifications %></div>

    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
