<%= render "layouts/nav/public" %>

<h1 class="h3">New Reservation</h1>

<h1>Reservations#new</h1>
<p>Find me in app/views/reservations/new.html.erb</p>

<%= form_with(model: @reservations) do |form| %>

  <div class="form-group pt-1">
    <%= form.label :property_id, "Property" %>
    <%= form.collection_select :property_id, @property, :id, :name %>
  </div>

  <div class="form-group pt-1">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group pt-1">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group pt-1">
    <%= form.submit "Reservate", class: "btn btn-success mt-3" %>
  </div>

<% end %>