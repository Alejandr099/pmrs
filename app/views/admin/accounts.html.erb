<h2>Accounts</h2>
<% @accounts.each do |account| %>
  <div class="row p-1">

    <div class="col-sm-2">
      <%= account.full_name %>
    </div>

    <div class="col-sm-2">
      <%= account.email %>
    </div>

    <div class="col-sm-2">
      <%= account.created_at.strftime('%d / %m / %Y') %>
    </div>

    <div class="col-sm-2">
      <%= link_to "View Profile", profile_path(account.id), class: "btn btn-primary" %>
    </div>

  </div>
<% end %>