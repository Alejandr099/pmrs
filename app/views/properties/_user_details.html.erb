<div class="text-center border pt-4 pb-4 ml-lg-4">
  <%= profile_avatar @user %>
  <h3 class="h4 m-0"><%= @user.full_name %></h3>
  <p><%= @user.company %></p>

  <div class="row mx-4">
    <div class="col-md-12 p-1">
      <%= link_to "Profile", profile_path(@user.id) , class:"btn btn-block btn-secondary text-uppercase w-100" %>
    </div>
    <div class="col-md-12 p-1">
      <button class="btn btn-block btn-success text-uppercase w-100" data-toggle="modal" data-target="#contact-modal">Email</button>
    </div>
  </div>
</div>