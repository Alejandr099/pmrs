<% Property.all.each do |property| %>
  <div class="col-md-4">
    <div class="property border m-4" style="width:302px; max-width: 302px;">
      <%= link_to( (image_tag property.public_page), property_path(property) ) %>

      <div class="property-summary pt-3">
        <h4 class="h5"><%= link_to property.name, property_path(property) %></h4>
        <span class="mr-2"><i class="fa-solid fa-bed"></i> <%= property.rooms %></span>
        <span class="mr-2"><i class="fa-solid fa-bath"></i> <%= property.bathrooms %></span>
        <span class="mr-2"><i class="fa-solid fa-car"></i> <%= property.parking_spaces %></span>
        <p class="mt-2"><%= property.address %></p>
      </div>
    </div>
  </div>

<% end %>