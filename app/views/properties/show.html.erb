<%= image_tag @property.photo, class: "property-main-photo",
              :style => "width: 100%; object-fit: cover; margin-top:-24px; margin-bottom:40px" %>
<div class="photo-overlay">
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2">
            <% if @property.for_sale? %>
              <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale!" %>
            <% else %>
              <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Rent!" %> / week
          <% end %>
          </p>
        </div>

        <div class="col-lg-6 text-center">
          <div class="row mr-lg-3 mt-sm-3 bg-light p-3">
            <div class="col-4">
              <p class="m-0"><strong>Rooms</strong></p>
              <span class="lead"><%= @property.rooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Bathrooms</strong></p>
              <span class="lead"><%= @property.bathrooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Parking</strong></p>
              <span class="lead"><%= @property.parking_spaces %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          <% if @property.for_sale? %>
          <strong><%= link_to "Estimated payment per Week:
#{number_to_currency((@property.price - (@property.price * 0.1)) / 360, precision: 0) }", "#", class: "text-success", style: "text-decoration: none;" %></strong>
            <% end %>
        </div>
        <div class="col-6 text-right m-lg-0">
          <strong><%= link_to "Can I affordrent this property?", "#", class: "text-success", style: "text-decoration: none; text-aligh:right;"  %></strong>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>
          <p class="h5">Property Description</p>

          <div id="prop-details" class="">
            <%= simple_format @property.details %>
          </div>

          <button class="btn btn-outline-info mt-3" id="toggleDetails">Show more</button>

          <p class="mt-5">This payment can be expand to week, month, year.</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <%= render "properties/agent_details" %>
    </div>

  </div>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <%= render "properties/list", properties: @agent_properties %>
    </div>
  </div>
</section>

