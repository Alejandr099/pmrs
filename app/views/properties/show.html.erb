<%= image_tag @property.photo, class: "property-main-photo",
              :style => "width: 100%; object-fit: cover; margin-top:-24px; margin-bottom:40px" %>
<div class="photo-overlay">
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "Book & Rent it!" %></p>
        </div>

        <div class="col-6 text-center">
          <div class="row mr-3 bg-light p-3">
            <div class="col-4">
              <p class="m-0"><strong>Rooms</strong></p>
              <span class="lead"><%= @property.rooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Bathrooms</strong></p>
              <span class="lead"><%= @property.bathrooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Parking</strong></p>
              <span class="lead"><%= @property.parking_spaces %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          <strong class="text-success">Estimated payment per night: <%= number_to_currency((@property.price / 100)) %></strong>
        </div>
        <div class="col-6">
          <strong class="text-success">Can I affordrent this property?</strong>
        </div>
      </div>

      <div class="row">
        <div class="col">
            <p class="h3">Property Description</p>
            <p>
              <strong>Name:</strong>
              <%= @property.name %>
            </p>

            <p>
              <strong>Address:</strong>
              <%= @property.address %>
            </p>

            <p>
              <strong>Price:</strong>
              <%= @property.price %>
            </p>

            <p>
              <strong>Rooms:</strong>
              <%= @property.rooms %>
            </p>

            <p>
              <strong>Bathrooms:</strong>
              <%= @property.bathrooms %>
            </p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <%= render "properties/agent_details" %>
      Agent info
    </div>
  </div>
</div>